<%- include("header", {}) %>
<div class="container-fluid text-center" id="container-fluid-fr">
    <% if (mensaje) { %>
        <div id="message" class="alert alert-success">
          <%= mensaje %>
        </div>
    <% } %>
    <div class="row g-5">
        <div class="col-8">
            <!-- Contenido de la columna izquierda -->
            <video class="videoBox" id="video" autoplay playsinline></video>
            <canvas id="canvas"></canvas>
        </div>
        <div class="col-4">
            <!-- Contenido de la columna derecha -->
            <div id="emoFrame">
                <div class="emotion" id="emotion">
                    <div class="spinner-grow text-secondary" role="status" id="spinner1">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <div class="spinner-grow text-secondary" role="status" id="spinner2">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <div class="spinner-grow text-secondary" role="status" id="spinner3">
                        <span class="visually-hidden">Loading...</span>
                    </div>                    
                    <p id="feliz"><%= emotion %></p>
                </div>
            </div>
            <div id="playlist-container">
                <ul id="list-content" class="playlist">
                    <% for(let i = 0; i < 5; i++) {%>
                        <li class="song">
                            <div class="song-details">
                                <div class="song-artist"><%= canciones[i] %></div>
                            </div>
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-8">
            <button type="button" id="capture" class="btn btn-secondary">
                <i class="bi bi-camera"></i>
            </button>
        </div>
        <div class="col-4">
            <button type="button" class="btn btn-success" id="botonPublicarCanciones">publicar</button>
        </div>
    </div>
   
</div>


<%- include("footer", {}) %>
